/* Linklist node structure
class Node
{
    int data;
    Node next;

    Node(int d){
        data = d;
        next = null;
    }
}*/

class Solution {
    Node deleteNode(Node head, int x) {
        // Edge case: delete first node
        if (x == 1) {
            return head.next;
        }

        // Find (x-1)th node
        Node prevNode = getNodeAt(head, x - 1);

        // Node to delete
        Node temp = prevNode.next;

        // Skip the node
        prevNode.next = temp.next;

        // Help GC by removing reference
        temp.next = null;

        return head;
    }

    // Returns node at given 1-based position.
    private Node getNodeAt(Node head, int pos) {
        Node node = head;

        while (pos > 1 && node != null) {
            node = node.next;
            pos--;
        }

        return node;
    }
}
