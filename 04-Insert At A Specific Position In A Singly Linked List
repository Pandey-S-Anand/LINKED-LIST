public class Solution {
    static Node insert(Node head, int n, int index, int value) {
        // Case 1: Insert at front
        if (index == 0) {
            Node newNode = new Node(value);
            newNode.next = head;
            return newNode;
        }

        // Find node just before target index
        Node previousNode = getNodeAt(head, index - 1);

        // Create new node
        Node newNode = new Node(value);

        // Adjust pointers
        newNode.next = previousNode.next;
        previousNode.next = newNode;

        return head;
    }

    //Returns node at a specific index (0-based).
    private static Node getNodeAt(Node head, int index) {
        Node current = head;

        while (index != 0) {
            current = current.next;
            index--;
        }

        return current;
    }
}
