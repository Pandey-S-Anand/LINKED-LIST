/*
class Node{
    int data;
    Node next;
    Node(int a){  data = a; next = null; }
}*/

class Solution {
    public int getCount(Node head) {
       Node node = head;
       int length = 0;
       
        // Traverse the entire list and count the number of nodes
       while(node != null){
          node = node. next;
          length++;
       }
       
       return length;
    }
}


//Aliter

class Solution {
    public int getCount(Node head) {
        int length = 0; // Variable to store the length of the linked list
        Node fast = head;

        // Traverse the singly linked list using a fast pointer
        while (fast != null && fast.next != null) {
            fast = fast.next.next; // Move the fast pointer two steps at a time
            length += 2; // Increment length by 2 as we are effectively counting two nodes in each iteration
        }

        // Check if the fast pointer is pointing to the last node (odd length list)
        if (fast != null && fast.next == null) {
            length++;
        }

        return length;
    }
}
