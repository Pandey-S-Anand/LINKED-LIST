class Solution {
    public Node arrayToList(int arr[]) {
        Node head = null; // Points to first node
        Node tail = null; // Points to last node for efficient append

        for (int num : arr) {
            Node node = new Node(num);

            if (head == null) {
                // First node creation
                head = tail = node;
            } else {
                // Attach new node at the end
                tail.next = node;
                tail = node;
            }
        }

        return head;
    }
}
