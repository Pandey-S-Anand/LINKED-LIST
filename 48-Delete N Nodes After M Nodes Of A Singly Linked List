class Solution {
    static void linkdelete(Node head, int n, int m) {
        Node current = head;
        
        while (current != null) {
            // Skip M nodes
            for (int i = 1; i < m && current != null; i++) {
                current = current.next;
            }
            
            // If we have reached the end, break
            if (current == null){
               return;  
            } 
            
            // Delete next N nodes
            Node temp = current.next;
            for (int i = 0; i < n && temp != null; i++) {
                temp = temp.next;
            }
            
            // Link the remaining singly linked list
            current.next = temp;
            
            // Move to the next M-th node
            current = temp;
        }
    }
}
