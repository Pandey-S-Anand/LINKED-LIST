class Solution {
    public static Node moveToFront(Node head) {
        // Edge case: single node list
        if (head.next == null) {
            return head;
        }

        // Find second last node
        Node newTail = getSecondLast(head);

        // Last node becomes new head
        Node newHead = newTail.next;

        // Break the link to detach last node
        newTail.next = null;

        // Attach old head after new head
        newHead.next = head;

        // Update head reference
        head = newHead;

        return head;
    }

    // Returns the second last node of the list.
    private static Node getSecondLast(Node head) {
        Node node = head;
        Node prevNode = null;

        // Traverse until node reaches the last node
        while (node.next != null) {
            prevNode = node;
            node = node.next;
        }

        return prevNode;
    }
}
