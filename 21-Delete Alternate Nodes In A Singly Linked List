class Solution {
    public void deleteAlt(Node head) {
        // If list has only one node, nothing to delete
        if (head.next == null) {
            return;
        }

        Node prev = null;          // Tracks last retained (odd-position) node
        Node node = head;          // Traverses the list
        boolean isEvenPosition = false;  // false → odd position, true → even position

        while (node != null) {
            if (isEvenPosition) {
                // Node is at even position → delete it
                Node next = node.next;   // Save next node
                prev.next = next;        // Skip current node
                node.next = null;        // Optional cleanup
                node = next;             // Move forward
            } else {
                // Node is at odd position → retain it
                prev = node;             // Update prev to current node
                node = node.next;        // Move forward
            }

            // Toggle position flag
            isEvenPosition = !isEvenPosition;
        }
    }
}
