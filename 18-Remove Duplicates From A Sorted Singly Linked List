class Solution {
    Node removeDuplicates(Node head) {
        // If only one node, no duplicates possible
        if (head.next == null) {
            return head;
        }

        Node prev = head;          // Last unique node
        Node node = head.next;     // Current node

        while (node != null) {

            // Duplicate detected
            if (prev.data == node.data) {

                // Skip duplicate node
                prev.next = node.next;

                // Optional cleanup
                node.next = null;

                node = prev.next;

            } else {
                // Move both pointers forward
                prev = node;
                node = node.next;
            }
        }

        return head;
    }
}
