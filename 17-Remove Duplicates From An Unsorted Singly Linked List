class Solution {
    public Node removeDuplicates(Node head) {
        if (head.next == null) {
            return head;   // Single node → no duplicates possible
        }

        Node node = head;
        Node prev = null;

        Set<Integer> seenValues = new HashSet<>();

        while (node != null) {
            // If value already seen → remove current node
            if (seenValues.contains(node.data)) {
                prev.next = node.next;  // Bypass duplicate
                node.next = null;       // Break link (optional cleanup)
                node = prev.next;       // Move to next node
            } else {
                // First occurrence of value
                seenValues.add(node.data);
                prev = node;
                node = node.next;
            }
        }

        return head;
    }
}
