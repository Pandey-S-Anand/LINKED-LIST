class Solution {
    public Node insertAtFront(Node head, int x) {
        // If list is empty, new node becomes the head
        if (head == null) {
            return new Node(x);
        }

        // Create new node
        Node node = new Node(x);

        // Link new node to current head
        node.next = head;

        // Update head reference
        head = node;

        return head;
    }
}
